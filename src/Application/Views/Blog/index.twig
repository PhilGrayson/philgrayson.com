{% extends "Blog/Blog.twig" %}

{% block content %}
  <div class="row">
    <div class="span8">
      {% for post in posts %}
        <div class="row">
          <div class="span12 post">
            <h4 class="category">{{ post.category }}</h4>
            <h1 class="title">
              <a href="{{ post.date|date('Y/m/') }}{{ post.slug }}">{{ post.title }}</a>
            </h1>
            <h4 class="date">{{ post.date|date('d F \'y') }}</h4>
            <p class="blurb">{{ post.blurb }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="span4">
      {% for category in categories %}
        <div class="row">
          <div class="span12">
            <a class="lead" href="{{ category.slug }}">
              {{ category.name }} ({{ category.count }})
            <a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
