sudo apt-get install git-core apache2 nginx php5 php5-mysql php-pear libapache2-mod-php5 mysql-server libyaml-dev redis-server uuid-devv php-curl gearman-job-server gearman-server

echo "extension=gearman.so" > /etc/php5/apache2/php.ini
echo "extension=gearman.so" > /etc/php5/cli/php.ini
echo "extension=curl.so" > /etc/php/cli/php.ini

mkdir ~/builds
cd ~/builds
git clone git://github.com/ry/node.git
cd node
./configure
make
sudo make install
sudo npm -g install less

sudo pear channel-discover pear.phing.info
sudo pear install --alldeps phing/phing
